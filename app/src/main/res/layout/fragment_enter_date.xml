<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.rockapps.mfuentes.workingcalendar.Activity.StartupWizardActivity$PlaceholderFragment"
    android:background="#ff85c0ff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="De 10 campeon!"
        android:id="@+id/excelent_text"
        android:textStyle="bold"
        android:textSize="40dp"
        android:layout_below="@+id/petroca_date"
        android:layout_centerHorizontal="true"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Una cosa mas:"
        android:id="@+id/now_enter_text"
        android:gravity="center"
        android:layout_below="@+id/excelent_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cuando empezÃ³ tu ultimo periodo laboral?"
        android:id="@+id/workdays_start_text"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/now_enter_text"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:id="@+id/next_button"
        android:layout_gravity="right|bottom"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="#ff4dabff"
        android:padding="10dp"
        android:layout_alignTop="@+id/last_button"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/date_picker" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anterior"
        android:id="@+id/last_button"
        android:layout_gravity="left|bottom"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="#ff4dabff"
        android:padding="10dp"
        android:layout_below="@+id/date_picker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_picker"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:layout_below="@+id/workdays_start_text"
        android:layout_alignLeft="@+id/date_picker"
        android:layout_alignStart="@+id/date_picker"
        android:layout_centerHorizontal="true"
        android:background="#ff85c0ff" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/petroca_date"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/wink1"
        android:layout_marginTop="20dp" />

    <!--<DatePicker-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/date_picker"-->
        <!--android:layout_below="@+id/workdays_start_text"-->
        <!--android:layout_alignRight="@+id/excelent_text"-->
        <!--android:layout_alignEnd="@+id/excelent_text"-->
        <!--android:layout_marginTop="5dp" />-->


</RelativeLayout>
